<html>
<head>
    <title>Blog</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/assets/submitEventHandler.js"></script>
    <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="blog-container">
        <div id="submit-container">
            <h3>Add an article</h3>
            <form>
                <input id="title-field" type="text" name="title" placeholder="Title" required/>
                <input id="author-field" type="text" name="author" placeholder="Author" required/>
                <textarea id="body-field" placeholder="Body goes here..."></textarea>

                <button id="createButton" type="submit">Add article</button>
            </form>
        </div>

        <div id="article-container">
            <h2>A List of Articles</h2>
            <hr id="topUnderline"/>
            <ul>
                <% for(var i=0; i < articles.length; i++){ %>
                    <li>
                        <h4 id="title"><%= articles[i].title %></h4>
                        <label><%= articles[i].author %></label>
                        <p><%= articles[i].body %></p>
                        <button id="editButton" type="button">Edit/Delete</button>
                        <hr/>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</body>
</html>