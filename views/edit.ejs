<html>
    <head>
        <title>Edit</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="/assets/editEventHandler.js"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
    </head>
    <body id="editBody">
        <div id="edit-section-container">
            <div id="edit-container">
                <h3>Edit article</h3>
                <form>
                    <input id="title-field-edit" type="text" name="title" value="<%= article[0].title %>"/>
                    <input id="author-field-edit" type="text" value="<%= article[0].author %>"/>
                    <textarea id="body-field-edit"><%= article[0].body %></textarea>
                    <button type="button" id="saveButton">Save article</button>
                    <button type="button" id="deleteButton">Delete article</button>
                </form>
            </div>
        </div>
    </body>
</html>